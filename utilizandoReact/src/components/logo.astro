---
interface Props {
    imgSrc: string;
}

const { imgSrc } = Astro.props;
---

<div class="img_container">
    <img src={imgSrc} />
</div>

<style>
    .img_container{
        width: 180px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    img{
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
</style>