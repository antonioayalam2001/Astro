---
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <div class="max-w-4xl mx-auto my-0">
            <h1 class="text-sm md:text-lg p-3" >{title}</h1>
            <slot />
        </div>
    </body>
</html>
