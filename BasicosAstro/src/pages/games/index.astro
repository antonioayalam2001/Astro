---
import BlogLayout from "../../layouts/blogLayout.astro";
import "../../styles/games.css";
const valor = 10;
const color = "danger";
const values = [10, 2, 3, 4];

const posts = [
    {
        id: 1,
        title: "Post 1",
        img: "https://picsum.photos/300/300",
        description: "This is the first post",
    },
    {
        id: 2,
        title: "Post 2",
        img: "https://picsum.photos/300/300",
        description: "This is the second post",
    },
    {
        id: 3,
        title: "Post 3",
        img: "https://picsum.photos/300/300",
        description: "This is the third post",
    },
];
---

<BlogLayout title="/games">
    <h1>Main page games route (index.astro)</h1>
    <a href="/games/games">Go to the games page</a>
    {
        values.map((value) => {
            return (
                <p class={value > 5 ? color : "warning"}>
                    The value that was rendered from array is {value}
                </p>
            );
        })
    }
    {
        posts.map((post) => {
            return (
                <div class="card" id={`card${post.id}`}>
                    <div class="card__img">
                        <img src={post.img} alt="" />
                    </div>
                    <div class="card__content">
                        <h2>The title of the post is {post.title}</h2>
                        <p>The description of the post is {post.description}</p>
                    </div>
                </div>
            );
        })
    }
</BlogLayout>

<style>
    h1 {
        text-align: center;
        margin-top: 100px;
    }
    p {
        text-align: center;
        padding: 10px;
        border: 1px solid black;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }
    .danger {
        color: red;
    }
    .warning {
        color: rgb(102, 102, 5);
    }
    .card {
        border: 3px solid black;
        margin: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        max-width: 300px;
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.5s ease-in-out;
        cursor: pointer;
        & .card__img {
            transition: max-height 0.5s ease-in-out;
            max-height: 200px;
            overflow: hidden;
            & img {
                width: 100%;
                height: auto;
            }
        }
        & h2 {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
            padding: 1rem;
            margin: 0;
            font-weight: 600;
            border: 0;
            border-bottom: 0.2rem solid #949494;
        }
        & p:nth-child(2) {
            background-color: white;
            color: #222;
            padding: 2rem;
            border: none;
            border-radius: 0 0 1rem 1rem;
            margin: 0;
        }
    }
    .card--open {
        & .card__img {
            max-height: 100%;
            overflow: hidden;
            & img {
                width: 100%;
                height: auto;
            }
        }
        & h2 {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
            padding: 1rem;
            margin: 0;
            font-weight: 600;
            border: 0;
            border-bottom: 0.2rem solid #949494;
        }
        & p:nth-child(2) {
            background-color: white;
            color: #222;
            padding: 2rem;
            border: none;
            border-radius: 0 0 1rem 1rem;
            margin: 0;
        }
    }
</style>

<script>
    // console.log("Hello from the browser");
    const card = document.getElementById("card1");
    card.addEventListener("click", () => {
        card.classList.toggle("card--open");
    });
</script>
